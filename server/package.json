{
  "name": "server",
  "version": "1.0.0",
  "description": "IDO - backend",
  "main": "src/index.ts",
  "scripts": {
    "server": "nodemon",
    "server:prod": "NODE_ENV=production nodemon",
    "build": "npm install && tsc",
    "start": "node dist/index.js",
    "setup-project": "npm install && cd ../client && npm install",
    "setup-production-app": "npm install && npx tsc && cd ../client && npm install && npm run build",
    "client": "cd ../client && npm run dev",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "prod": "concurrently --kill-others-on-fail \"npm run server:prod\" \"npm run client\""
  },
  "author": "Edmealem Kassahun",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.0",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2"
  }
}
